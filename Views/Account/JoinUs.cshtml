@model NikeStyle.Models.JoinUsViewModel

<div class = "join-container">
    <div class="join-container">
        <div class="logo">
            <img src="~/images/logo.jpg"/>
        </div>
    </div>

    <h2>Enter your email to join us or sign in.</h2>
    <form asp-asp-action="JoinUs" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required/>
            <span asp-asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Continue</button>
        <p>By continuing, I agree to Nike's Privacy Policy and Terms of Use</p>
    </form>

</div>
